{
  "settings": {
    "refresh_interval": "1s",
    "number_of_shards": "5",
    "number_of_replicas": "0",
    "analysis": {
      "analyzer": {
        "my_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "my_tokenizer",
            "lowercase",
            "my_stemmer",
            "english_possessive_stemmer",
            "my_stop"
          ]
        },
        "tag_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "my_tokenizer",
            "lowercase"
          ]
        }
      },
      "filter": {
        "my_synonym": {
          "type": "synonym",
          "synonym_path": "synonyms.txt"
        },
        "my_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "my_tokenizer": {
          "type": "word_delimiter",
          "split_on_numerics": true,
          "split_on_case_change": true,
          "generate_word_parts": true,
          "generate_number_parts": true,
          "catenate_all": false
        },
        "my_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        }
      }
    }
  }
}
